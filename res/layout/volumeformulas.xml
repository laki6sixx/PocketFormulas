<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listviewbackground">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/formulas_bgr">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_height="180dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/cubevolume" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCubeVol"
                    android:text="Cube"
                    android:textColor="@color/YellowVolume"
                    android:layout_gravity="center_horizontal" />

                <WebView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wvCubeVolume" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="180dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/rectangularprismvolume" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvRectangularPrismVolume"
                    android:text="Rectangular Prism"
                    android:textColor="@color/YellowVolume"
                    android:layout_gravity="center_horizontal" />

                <WebView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wvRectangularPrismVol" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="180dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/irregularprism" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvIrregularPrismVol"
                    android:text="Irregular Prism"
                    android:textColor="@color/YellowVolume"
                    android:layout_gravity="center_horizontal" />

                <WebView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wvIrregularPrismVolume" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="180dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/cylindervolume" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCylinderVol"
                    android:text="Cylinder"
                    android:textColor="@color/YellowVolume"
                    android:layout_gravity="center_horizontal" />

                <WebView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wvCylinderVolume" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="180dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/pyramid" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPyramidVol"
                    android:text="Pyramid"
                    android:textColor="@color/YellowVolume"
                    android:layout_gravity="center_horizontal" />

                <WebView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wvPyramidVolume" />
            </LinearLayout>
            <LinearLayout
                android:layout_height="180dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/cone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvConePer"
                    android:text="Cone"
                    android:textColor="@color/YellowVolume"
                    android:layout_gravity="center_horizontal" />

                <WebView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wvConeVolume" />
            </LinearLayout>
            <LinearLayout
                android:layout_height="180dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/spherevolume" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSphereVol"
                    android:text="Sphere"
                    android:textColor="@color/YellowVolume"
                    android:layout_gravity="center_horizontal" />

                <WebView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wvSphereVolume" />
            </LinearLayout>
            <LinearLayout
                android:layout_height="180dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ellipseoid" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvEllipsoidVol"
                    android:text="Ellipsoid"
                    android:textColor="@color/YellowVolume"
                    android:layout_gravity="center_horizontal" />

                <WebView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wvEllipsoidVolume" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>