<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/listviewbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlThanks">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:src="@drawable/lazarko"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="And that's it!"
        android:id="@+id/youDidIt"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:textColor="@color/BrightBlue"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the end of the guide. From now on, you're on your own! Thank you for downloading this application. I hope you like it! To proceed click on the button below!"
        android:id="@+id/endOfTheGuide"
        android:layout_below="@+id/youDidIt"
        android:layout_centerHorizontal="true"
        android:textColor="@color/BrightBlue"
        android:textSize="20dp"
        android:gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:id="@+id/bProceed"
        android:layout_marginTop="36dp"
        android:background="@color/BrightBlue"
        android:layout_below="@+id/endOfTheGuide"
        android:layout_centerHorizontal="true"
        android:enabled="true"
        android:padding="10dp"
        android:textColor="@android:color/white" />
</RelativeLayout>