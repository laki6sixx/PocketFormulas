<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listviewbackground">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/formulas_bgr">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/mxplusb" />


            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/xsquared" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/xpowerfour" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/xpowerfive" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/xpowerminus2" />
            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/xpowerthree" />
            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/xpowerminusone" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/point" />
            <WebView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/wvPointGraph"/>

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/ellipsefirst" />
            <WebView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/wvEllipseFirstGraph"/>

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/ellipsesecond" />
            <WebView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/wvEllipseSecondGraph"/>

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/parabolafirst" />
            <WebView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/wvParabolaFirstGraph"/>

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/parabolasecond" />
            <WebView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/wvParabolaSecondGraph"/>

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/circlegraph" />
            <WebView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/wvCircleGraph"/>

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/hyperbolafirst" />
            <WebView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/wvHyperbolaFirstGraph"/>

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/hyperbolasecond" />
            <WebView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/wvHyperbolaSecondGraph"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>